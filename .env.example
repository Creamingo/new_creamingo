# ============================================
# Creamingo - Single Environment Configuration
# ============================================
# This file contains all environment variables for the entire project
# Backend, Frontend, and Admin Panel all use this file
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration (MySQL)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=creamingo_user
DB_PASSWORD=creamingo_secure_password_2024
DB_NAME=creamingo_db

# Allow MySQL connections from VPS (comma-separated IPs or % for all)
# Example: DB_ALLOWED_HOSTS=%,192.168.1.100,10.0.0.1
DB_ALLOWED_HOSTS=%

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=creamingo_super_secret_jwt_key_2024_secure_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
REFRESH_TOKEN_REMEMBER_EXPIRES_IN=30d
ADMIN_ACCESS_TOKEN_EXPIRES_IN=15m
ADMIN_REFRESH_TOKEN_EXPIRES_IN=7d
ADMIN_REFRESH_TOKEN_REMEMBER_EXPIRES_IN=30d

# Rate limiting (authentication)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=20
CUSTOMER_AUTH_RATE_LIMIT_MAX=20

# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# File Upload Configuration
# ============================================
# Use relative path for development: ./backend/uploads
# Use absolute path for VPS/production: /var/www/creamingo/backend/uploads
UPLOAD_PATH=./backend/uploads
MAX_FILE_SIZE=5242880

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ============================================
# Frontend Configuration (Next.js)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_ENVIRONMENT=development

# ============================================
# Admin Panel Configuration (React)
# ============================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENVIRONMENT=development

# ============================================
# Email Configuration (SMTP) - OPTIONAL
# ============================================
# Uncomment and configure to enable email functionality
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
